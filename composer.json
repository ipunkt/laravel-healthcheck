{
	"name": "ipunkt/laravel-healthcheck",
	"description": "configurable healthcheck route for laravel",
	"type": "library",
	"license": "MIT",
	"authors": [
		{
			"name": "Sven Speckmaier",
			"email": "sps@ipunkt.biz"
		}
	],
	"autoload": {
		"psr-4": {
			"Ipunkt\\LaravelHealthcheck\\": "healthcheck"
		}
	},
	"require": {
		"illuminate/support": "^5.0 || ^6.0 || ^7.0 || ^8.0 || ^9.0",
		"illuminate/database": "^5.0 || ^6.0 || ^7.0 || ^8.0 || ^9.0"
	},
	"require-dev": {
		"phpunit/phpunit": "^9.0",
		"mockery/mockery": "^0.9",
		"solarium/solarium": "^3.8"
	},
	"suggest": {
		"solarium/solarium": "Necessary to check Apache Solr instance"
	},
	"extra": {
		"laravel": {
			"providers": [
				"Ipunkt\\LaravelHealthcheck\\HealthcheckProvider"
			]
		}
	}
}
